#SBATCH --partition=lab-amaciasmunoz        
#SBATCH --time=1-00:00:00                  
#SBATCH --ntasks=1                    
#SBATCH --cpus-per-task=2         
#SBATCH --mem=5G                         
#SBATCH --qos=pi-amaciasmunoz             
#SBATCH --account=pi-amaciasmunoz        
#SBATCH --output=medusozoa_calcdiv_.out

module load repeatmodeler
perl /hb/groups/macias-munoz_lab/calcDivergenceFromAlignment_custom.pl -s hydraAEP_custom2.divsum -tbl hydra_AEP.fna.tbl hydra_AEP.fna.align

#next; replace aep.divsum with the name of divsum file and kimuraAEP.txt with name of your species eg. kimura_aur_aur.txt
csplit -f aepDiv aep.divsum '/Coverage for each repeat/' '{0}' && sed '1d' aepDiv01 > kimuraAEP.txt && rm aepDiv0*

